<template name="fromTemplate">

    <block
        wx:for="{{objInput}}"
        wx:for-index="key"
        wx:key="key">

        <view class="form-block" wx:if="{{item.useTopBlock}}"></view>

        <view class="c-border mr" wx:if="{{item.useTopBorder}}"></view>

        <wow-cell
            wx:if="{{item.mode === 'mode-input'}}"
            bindinput="inputHandle"
            data-item="{{item}}"
            classes="{{item.classes || 'border-bottom cursor-pointer mode-input'}}"
            label="{{item.label}}"
            value="{{item.value}}"
            type="{{item.type}}"
            maxlength="{{item.maxlength}}"
            placeholder="{{item.placeholder}}"
            icon-right=""
        ></wow-cell>

        <picker
            range="{{item.options}}"
            data-item="{{item}}"
            range-key="{{item.rangeKey}}"
            bindchange="inputHandle"
            mode="{{item.wxMode || 'selector'}}"
            wx:if="{{item.mode === 'mode-select'}}">
            <wow-cell
                classes="{{item.classes || 'border-bottom cursor-pointer mode-input'}}"
                label="{{item.label}}"
                value="{{item.value}}"
                placeholder="{{item.placeholder}}"
            ></wow-cell>
        </picker>

        <picker
            bindchange="formAddressHandle"
            mode="region"
            data-item="{{item}}"
            wx:if="{{item.mode === 'mode-region'}}">
            <wow-cell
                label="{{item.label}}"
                value="{{item.value}}"
                placeholder="{{item.placeholder}}"
            ></wow-cell>
        </picker>

        <wow-cell
            use-right-content=""
            icon-right=""
            bindtap="inputHandle"
            data-item="{{item}}"
            data-value="{{!item.value}}"
            label="{{item.label}}"
            wx:if="{{item.mode === 'mode-switch'}}">
            <switch checked="{{item.value}}" color="#B12C2C" class="form-switch" slot="cell-right"></switch>
        </wow-cell>

        <view class="form-grade" wx:if="{{item.mode === 'mode-grade'}}">
            <view class="form-grade-label">
                <text>{{item.label}}</text>
            </view>
            <view class="form-grade-value">
                <view class="iconfont {{item.value >= opt.value ? 'iconStarFilling' : 'iconStarLinear' }}"
                      wx:for="{{item.options}}"
                      wx:for-item="opt"
                      wx:for-index="optIndex"
                      wx:key="optIndex"
                      bindtap="inputHandle"
                      data-value="{{optIndex}}"
                      data-item="{{item}}"
                ></view>
            </view>
            <view class="form-grade-tip">
                <text>{{item.options[item.value - 1].label}}</text>
            </view>
        </view>

        <view wx:if="{{item.mode === 'mode-textarea'}}"
              class="form-textarea">
            <textarea
                class="textarea"
                value="{{item.value}}"
                bindinput="inputHandle"
                data-item="{{item}}"
                placeholder-class="input-place"
                placeholder="{{item.placeholder}}"
            ></textarea>
            <view class="form-textarea-tip">
                <text>{{item.maxlength - item.value.length}}</text>
            </view>
        </view>

        <view class="upload-box"
              wx:if="{{item.mode === 'mode-upload'}}">
            <view class="upload-label">
                <text>{{item.label}}</text>
                <text class="upload-tip">{{item.placeholder}}</text>
            </view>
            <view class="upload-content">
                <view class="upload-cell"
                      wx:for="{{item.value}}"
                      wx:for-item="img"
                      wx:for-index="i"
                      wx:key="i">
                    <image class="upload-image" src="{{img}}"></image>
                    <view class="iconfont iconClose"
                          bindtap="formUploadDeleteHandle"
                          data-index="{{i}}"
                          data-item="{{item}}"
                    ></view>
                </view>
                <view
                    wx:if="{{item.value.length < item.maxlength}}"
                    class="upload-cell iconfont iconCamera"
                    bindtap="formUploadHandle"
                    data-item="{{item}}"
                ></view>
            </view>
        </view>

        <view class="c-border mr" wx:if="{{item.useBottomBorder}}"></view>

        <view class="form-block" wx:if="{{item.useBottomBlock}}"></view>

    </block>

</template>

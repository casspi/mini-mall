
<scroll-view
    bindscrolltolower="handleLoad"
    class="s-wiper-item"
    scroll-y>

    <null-view
        wx:if="{{total < 1}}"
        is-loading="{{total === -1}}"
    ></null-view>

    <block
        wx:for="{{arrArrData}}"
        wx:for-item="arrData"
        wx:for-index="arrIndex"
        wx:key="arrIndex">
        <special-item
            wx:for="{{arrData}}"
            wx:key="index"
            data="{{item}}"
        ></special-item>
    </block>

    <wow-loading-footer
        wx:if="{{total > 0}}"
        is-loading="{{total > numTotal}}"
        prompt="{{total > numTotal ? '加载中...' : '到底了哦'}}"
    ></wow-loading-footer>

</scroll-view>
